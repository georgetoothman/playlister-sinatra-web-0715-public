<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <div>
    <label for="song_name">Name</label>
    <input type="text" name="song[name]" id="song_name">
  </div>
  <div>
  <% @genres.each do |genre| %>
    <label for="<%= genre.slug %>"><%= genre.name %></label>
    <input type="checkbox" name="song[genre_ids][]" id="<%= genre.slug %>" value="<%= genre.id %>">
    <% end %>
  </div>
  <div>
    <label for="artist_name">Artist Name</label>
    <input type="text" name="song[artist_attributes][name]" id="artist_name" value="<%= @song.artist.name %>">
  </div>
  <input type="submit" value="Save">
</form>